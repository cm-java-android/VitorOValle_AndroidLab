<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.principal.sided.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LayoutGeral"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Acessar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BotaoAcessar"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/CaixaTextoPass"
            android:layout_marginBottom="65dp" />

        <Button
            android:text="Limpar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="47dp"
            android:id="@+id/BotaoLimpar"
            android:layout_alignBaseline="@+id/BotaoAcessar"
            android:layout_alignBottom="@+id/BotaoAcessar"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/CaixaTextoPass"
            android:hint="Senha do usuário"
            android:gravity="center"
            android:background="#99ccff"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/BotaoLimpar"
            android:layout_marginEnd="10dp" />

        <TextView
            android:text="Bem Vindo ao Sistema de Estudos - SIDED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CaixaTexto1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="37dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/CaixaTextoEMail"
            android:hint="Email do usuário"
            android:gravity="center"
            android:background="#99ccff"
            android:layout_marginBottom="37dp"
            android:layout_above="@+id/CaixaTextoPass"
            android:layout_alignStart="@+id/CaixaTextoPass" />
    </RelativeLayout>
</RelativeLayout>
